<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>FirstPage</servlet-name>
    <servlet-class>com.odeskproj.FirstPage</servlet-class>
    <init-param>
      <param-name>DB_DRIVER</param-name>
      <param-value>com.mysql.jdbc.Driver</param-value>
    </init-param>
    <init-param>
      <param-name>DB_URL</param-name>
      <param-value>jdbc:mysql://127.0.0.1:3306/odeskdb</param-value>
    </init-param>
    <init-param>
      <param-name>DB_USERNAME</param-name>
      <param-value>root</param-value>
    </init-param>
    <init-param>
      <param-name>DB_PASSWORD</param-name>
      <param-value>password</param-value>
    </init-param>
    <init-param>
      <param-name>DB_TABLE</param-name>
      <param-value>citynames</param-value>
    </init-param>
    <init-param>
      <param-name>DB_TABLE_FIRST_COLUMN</param-name>
      <param-value>cityId</param-value>
    </init-param>
    <init-param>
      <param-name>DB_TABLE_SECOND_COLUMN</param-name>
      <param-value>cityName</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>SecondPage</servlet-name>
    <servlet-class>com.odeskproj.SecondPage</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ThirdPage</servlet-name>
    <servlet-class>com.odeskproj.ThirdPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FirstPage</servlet-name>
    <url-pattern>/page1</url-pattern>
    </servlet-mapping>												   	
    <servlet-mapping>
    <servlet-name>SecondPage</servlet-name>
    <url-pattern>/page2</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ThirdPage</servlet-name>
    <url-pattern>/page3</url-pattern>								      
  </servlet-mapping> 
  <welcome-file-list>
   <welcome-file>page1</welcome-file> 
  </welcome-file-list>
</web-app>  